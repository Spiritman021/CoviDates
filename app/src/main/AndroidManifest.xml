<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tworoot2.covidupdates">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/virus"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/virus"
        android:supportsRtl="true"
        android:theme="@style/Theme.CovidUpdates">
        <activity
            android:name=".About.AboutMe"
            android:exported="true" />
        <activity
            android:name=".SingleStateData"
            android:exported="true" />
        <activity android:name=".StateActivity" />
        <activity android:name=".DistrictActivity" />
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CovidUpdates.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>